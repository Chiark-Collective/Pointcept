[
  {% for file in input_files %}
  {
    "type": "readers.las",
    "filename": "{{ file }}",
    "extra_dims": "{{ extra_dims }}"
  },
  {% endfor %}
  {
    "type": "filters.merge"
  },
  {
    "type": "writers.las",
    "filename": "{{ output_file }}",
    "forward": "all",
    "extra_dims": "all",
    "minor_version": 4,
    "dataformat_id": 8
  }
]
